<div class="row">
  <aside class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">私のニックネームは<%= @user.nickname %>　です</h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="" alt="ユーザ画像">
      </div>
    </div>
  </aside>
  <div class="col-xs-8">
    <ul class="nav nav-tabs nav-justified">
      <li><a href="#">出品成果物一覧</a></li>

      <% @productions.each do |production| %>
    
      <%= link_to production do %>
    
      <div class="item">
        <div class="col-md-3 col-sm-4 col-xs-12">
          
          
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <!--<= production.production_picture %>-->
              <%= image_tag(production.production_picture) if production.production_picture.present? %>
              <!--<= image_tag(production.production_picture) %>-->
            </div>
            <div class="panel-body">
              <p class="item-title production-title"> <%= production.production_title %> </p>
            </div>
          
          </div>
          
        </div>
        <% end %>
        
      </div>
    <% end %>

    </ul>
  </div>
</div>